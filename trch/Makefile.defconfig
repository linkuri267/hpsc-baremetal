CONFIG_HPPS_TRCH_SHMEM_SSW 		?= 1
CONFIG_TRCH_WDT 				?= 1
CONFIG_RTPS_R52_WDT 			?= 1
CONFIG_RTPS_A53_WDT 			?= 1
CONFIG_HPPS_WDT 				?= 1
